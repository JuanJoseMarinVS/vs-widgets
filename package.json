{
    "name": "vs-widgets",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/lib.umd.cjs",
    "module": "./dist/lib.js",
    "exports": {
        ".": {
            "import": "./dist/lib.js",
            "require": "./dist/lib.umd.cjs"
        },
        "./styles.css": "./dist/lib.css"
    },
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc -b && vite build",
        "preview": "vite preview",
        "lint": "eslint ./src --ext .ts,.js,.vue --fix",
        "format": "prettier . --write",
        "check": "npm run format && npm run lint"
    },
    "peerDependencies": {
        "vue": "^3.5.25"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
        "@types/node": "^24.10.1",
        "@vitejs/plugin-vue": "^6.0.2",
        "@vue/tsconfig": "^0.8.1",
        "autoprefixer": "^10.4.24",
        "daisyui": "^4.12.24",
        "eslint-plugin-vue": "^10.7.0",
        "jiti": "^2.6.1",
        "postcss": "^8.5.6",
        "prettier": "3.8.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "tailwindcss": "^3.4.19",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.55.0",
        "vite": "^7.3.1",
        "vite-plugin-dts": "^4.5.4",
        "vue-tsc": "^3.1.5"
    }
}
