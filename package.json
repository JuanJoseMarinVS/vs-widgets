{
    "name": "@tecnologia-general/widgets",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "module": "./dist/lib.js",
    "main": "./dist/lib.umd.cjs",
    "exports": {
        ".": {
            "import": "./dist/lib.js",
            "require": "./dist/lib.umd.cjs"
        },
        "./dist/styles.css": "./dist/lib.css"
    },
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/VirtualsoftSS/VirtualsoftWidgets.git"
    },
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc -b && vite build",
        "preview": "vite preview",
        "lint": "eslint ./src --ext .ts,.js,.vue --fix",
        "format": "prettier . --write",
        "check": "npm run format && npm run lint",
        "release:patch": "npm version patch && npm publish",
        "release:minor": "npm version minor && npm publish",
        "release:major": "npm version major && npm publish",
        "release:dev": "npm version prerelease --preid=dev && npm publish --tag dev",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.18",
        "daisyui": "^5.5.17",
        "tailwindcss": "^4.1.18",
        "vue": "^3.5.24"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^5.0.0",
        "@eslint/js": "^9.39.2",
        "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
        "@types/node": "^24.10.1",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/browser-playwright": "^4.0.18",
        "@vitest/coverage-v8": "^4.0.18",
        "@vue/tsconfig": "^0.8.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "eslint": "^9.39.2",
        "eslint-plugin-vue": "^10.7.0",
        "globals": "^17.3.0",
        "playwright": "^1.58.1",
        "prettier": "3.8.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "1-merge": "^3.4.0",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.54.0",
        "vite": "npm:rolldown-vite@7.2.5",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^4.0.18",
        "vue-tsc": "^3.1.4",
        "storybook": "^10.2.7",
        "@storybook/vue3-vite": "^10.2.7",
        "@storybook/addon-vitest": "^10.2.7",
        "@storybook/addon-a11y": "^10.2.7",
        "@storybook/addon-docs": "^10.2.7",
        "eslint-plugin-storybook": "^10.2.7"
    },
    "overrides": {
        "vite": "npm:rolldown-vite@7.2.5"
    },
    "eslintConfig": {
        "extends": [
            "plugin:storybook/recommended"
        ]
    }
}
